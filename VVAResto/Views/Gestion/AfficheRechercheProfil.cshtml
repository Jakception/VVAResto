@model List<VVAResto.Models.Profil>

@if (Model != null)
{
    if (Model.Count == 0)
    {
        <p>Pas de résultat</p>
    }
    else
    {
        <table class="table">
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date Inscription</th>
                <th>Date début séjour</th>
                <th>Date fin séjour</th>
                <th>Type profil</th>
                <th>Profil resto</th>
                <th>Date fermeture</th>
                <th></th>
            </tr>
            @foreach (var profil in Model)
            {
                <tr>
                    <td>@profil.Identifiant</td>
                    <td>@profil.NomProfil</td>
                    <td>@profil.PrenomProfil</td>
                    <td>@profil.DateInscrip.ToString()</td>
                    <td>@profil.DateDebutSejour.ToString()</td>
                    <td>@profil.DateFinSejour.ToString()</td>
                    <td>@profil.TypeProfil</td>
                    <td>@profil.ProfilResto.ToString()</td>
                    <td>@profil.DateFermeture.ToString()</td>
                    <td>@Html.ActionLink("Modifier", "ModifierProfil", new { identifiant = profil.Identifiant })</td>
                </tr>
            }
        </table>
    }
}