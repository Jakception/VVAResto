@model List<VVAResto.Models.Profil>

@if (Model != null)
{
    if (Model.Count == 0)
    {
        <p>Pas de résultat</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Identifiant</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Date Inscription</th>
                    <th>Date début séjour</th>
                    <th>Date fin séjour</th>
                    <th>Type profil</th>
                    <th>Profil resto</th>
                    <th>Date fermeture</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var profil in Model)
                {
                    <tr>
                        <td>@profil.Identifiant</td>
                        <td>@profil.NomProfil</td>
                        <td>@profil.PrenomProfil</td>
                        <td>@profil.DateInscrip.ToString("dd/MM/yyyy")</td>
                        <td>@profil.DateDebutSejour.ToString("dd/MM/yyyy")</td>
                        <td>@profil.DateFinSejour.ToString("dd/MM/yyyy")</td>
                        <td>@profil.TypeProfil</td>
                        <td>@profil.ProfilResto.ToString()</td>
                        <td>@profil.DateFermeture.HasValue ? profil.DateFermeture.Value.ToString("dd/MM/yyyy") : "N/A" </td>
                        <td>
                            @Html.ActionLink("Modifier", "ModifierProfil", new { identifiant = profil.Identifiant }) |
                            @Html.ActionLink("Supprimer", "SupprimerProfil", new {identifiant = profil.Identifiant })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}