@model VVAResto.Models.Profil

@{
    ViewBag.Title = "Ajouter un profil";
}

<h2>Ajouter un profil</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.NomProfil, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomProfil, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomProfil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PrenomProfil, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PrenomProfil, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PrenomProfil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateDebutSejour, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.DateDebutSejour, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.DateDebutSejour, "{0:dd/MM/yyyy}", new { @class = "date-picker form-control" })
                @Html.ValidationMessageFor(model => model.DateDebutSejour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateFinSejour, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.DateFinSejour, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.DateFinSejour, "{0:dd/MM/yyyy}", new { @class = "date-picker form-control" })
                @Html.ValidationMessageFor(model => model.DateFinSejour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProfilResto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ProfilResto)
                    @Html.ValidationMessageFor(model => model.ProfilResto, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la recherche", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
            $(function () {
                $('#DateDebutSejour').datetimepicker({
                    format: 'DD/MM/YYYY'
                });
            });
            $(function () {
                $('#DateFinSejour').datetimepicker({
                    format: 'DD/MM/YYYY'
                });
            });
</script>

<script type="text/javascript">
    jQuery(function ($) {
        $.validator.addMethod('date',
        function (value, element) {
          $.culture = Globalize.culture("en-AU");
          var date = Globalize.parseDate(value, "dd/MM/yyyy", "en-AU");
          return this.optional(element) ||
            !/Invalid|NaN/.test(new Date(date).toString());
        });
    });
</script>
